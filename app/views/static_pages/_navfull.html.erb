<div id="navbar-full-width"> <!-- fixed navbar stretching accross page -->
	<div id="navbar-inner"> <!--navbar content constrained to fixed width -->
		<div id="logo"> <!--logo pulled right, navbar-inner div 1 of 7-->
			<a href="/" id="logomain"><span id="logoblue">cyrus</span><span id="logowhite1">[</span><span id="logoorange">:blog</span><span id="logowhite2">]</span></a>
		</div><!-- id="logo" -->
		
		<% if user_signed_in? %>
		
		<div id="button-1" class="navcluster"> <!--button pulled left, navbar-inner div 2 of 7-->
			<%= link_to('Edit Account', edit_user_registration_path) %>		
		</div><!-- id="button-1" -->
		
		<div id="button-2" class="navcluster"> <!--button pulled left, navbar-inner div 3 of 7-->
			<%= link_to 'Edit Username', edit_user_path(current_user) %>       		  
		</div><!-- id="button-2" -->
		
		<div id="button-3" class="navcluster"> <!--button pulled left, navbar-inner div 4 of 7-->
			
			<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
		</div><!-- id="button-3" -->
		
		<div id="button-4" class="navcluster"> <!--button pulled left, navbar-inner div 5 of 7-->
			<%= current_user.email %>
		</div><!-- id="button-4" -->
		
		<div id="button-5" class="navcluster"> <!--button pulled left, navbar-inner div 6 of 7-->
			<% if current_user.anonymous? or current_user.name? == false %>
				<%= link_to 'Anonymous', user_path(current_user) %>
			<% elsif current_user.name? and current_user.anonymous == false %>
				<%= link_to current_user.name, user_path(current_user) %>
			<% end %>
		</div><!-- id="button-5" -->
		
		<div id="button-6" class="navcluster"> <!--button pulled left, navbar-inner div 7 of 7-->
			<% if current_user.anonymous? or current_user.name? == false %>
				<%= link_to 'Switch to Credited', toggle_path %>
			<% elsif current_user.name? and current_user.anonymous == false %>
				<%= link_to 'Switch to Anonymous', toggle_path %>
			<% end %>
		</div><!-- id="button-6" -->
		
		<% else %>
		
		<div id="button-1" class="navcluster"> <!--button pulled left, navbar-inner div 2 of 7-->
			  <%= link_to('Sign Up', new_user_registration_path)  %>
		</div><!-- id="button-1" -->
		
		<div id="button-2" class="navcluster"> <!--button pulled left, navbar-inner div 3 of 7-->
			  or 
		</div><!-- id="button-2" -->
		
		<div id="button-3" class="navcluster"> <!--button pulled left, navbar-inner div 4 of 7-->
			  <%= link_to('Login', new_user_session_path)  %>  
		</div><!-- id="button-3" -->
		
		<% end %>
				
	</div><!-- id="navbar-inner" -->
</div><!-- id="navbar-full-width" -->